---
import { Button } from "@/components/ui/button";
import DefaultLayout from "@/layouts/DefaultLayout.astro";
const { title, header, subheader, btntext, link } = Astro.props;
---

<DefaultLayout title={title}>
  <div
    class="flex flex-col h-[75vh] text-center justify-center items-center fade text-white"
  >
    <div class="text-[4rem] text-center">
      {header}
    </div>
    <div class="typewriter">
      <h1 class="text-[1.2rem] md:text-2xl">{subheader}</h1>
    </div>
    <br />
    <a href={link}>
      <Button className="hover:opacity-80">
        <p class="text-xl">{btntext}</p>
      </Button>
    </a>
  </div>
</DefaultLayout>
